  //max-width $width-content
}
.body__wrapper {
    max-width $width-content
    min-width 300px
    margin 0 auto
    position relative
    overflow hidden

}
//----------------------HEADER----------------------------------
.header {
  background url("../img/header/header-bg.png") no-repeat center;
  min-height 400px;
  //min-width 100%
  position relative

  &__link {
    position absolute
    left 155px
    bottom 5%
    text-decoration none
    font-family: 'Open Sans Regular', arial;
    font-size 18px
    text-transform uppercase
    color: #ffffff
    //border solid 1px #000000
    padding 20px 62px
    background-color $color-button-link
    transition 0.5s
    @media (max-width: 600px) {
      transition 0.5s
      left 62px
    }
    &:hover {
      background-color $color-header-link-hover
      transition 0.5s
    }

  }
  &__logo-img {
    margin-left 88px
    @media (max-width: 600px) {
      transition 0.5s
      margin-left 0px
  }
  }
  &__men-img {
    position absolute
    right 0
    top 0
    transition 0.5s
    @media (max-width: 800px) {
      transition 0.5s
      right -200px
    }
    @media (max-width: 600px) {
      display none
    }
  }
}
  //--------------------------------------------
  .main-content-title {
      text-align center
      font-family: 'Open Sans Light', Serif;
      text-transform uppercase
      font-size 24px
      font-weight normal
      //margin-top 37px
    &_advantages {
      color #ffffff
      padding 24px 0
    }
  }
  .content {
    font-family: 'Open Sans Regular', Serif;
    &__wrapper {
      max-width $width-content
      margin 0 auto
    }
    .content-info {
      margin-left 10px
      &__link {
        color #ffffff
        text-decoration none
        display block
        background-color $color-button-link
        &:hover {
          background-color $color-header-link-hover
        }
      }
    &__title {
      font-family: 'Open Sans Light', Serif;
      text-transform uppercase
      font-size 36px
      font-weight normal
      margin-top 33px
      margin-bottom 29px
      &_small {
        font-size 16px
      }
    }
      &__text {
        font-size 16px
        line-height 1.7
      }
      &__text:last-child {
        margin-top 18px
      }
      &__button {
        text-decoration none
        font-size 18px
        text-transform uppercase
        width 357px
        height 70px
        margin 0 auto
        text-align center
        line-height 70px
        margin-top 35px
      }
      &__item {
        width 227px
        text-align center
        h2 {
          margin 0
          padding 0
        }

      }
    }
  .content-info-static {
    margin-top 37px
    &__wrapper {
      display flex
      justify-content space-between
      margin-top 34px
      flex-wrap wrap
    }
    &__wrapper-number {
      position: relative
    }
    &__title {
      margin-top 37px
      &_number {
        color $color-button-link
        font-size 60px
        font-weight normal
      }
      &_small {
        color $color-button-link
        font-size 16px
        margin-top 4px
        line-height 1.2
        font-weight normal
      }
    }
    &__item {
        flex 0 1 25%
        text-align center
        @media (max-width: 950px) {
          flex 0 0 50%
        }
      @media (max-width: 600px) {
        flex 0 0 100%
        border-bottom 1px solid #000000
        &:last-child {
          border-bottom none
        }
      }
      &:first-child {
        .content-info-static__img {
          margin-top 13px
        }
      }
      &:nth-child(2) {
      .content-info-static__img {
        margin-top 2px
      }
      }
      &:nth-child(3) {
        .content-info-static__img {
          margin-top -31px
          margin-bottom 0
        }
        .content-info-static__title_small {
          margin-left 50px
        }
      }
      &:nth-child(4) {
        .content-info-static__img {
          margin-top 1px
          margin-bottom 2px
        }

        .content-info-static__title_number {
          position relative
          display inline-block
          &:before {
            content "Более"
            font-size 16px
            position absolute
            top 8px
            left -50px
          }
        }
      }
    }
    &__text {
      display block
      margin 25px auto
      font-size 16px
      line-height 1.6
      max-width 227px

    }
  }
  }

    .advantages {
      margin-top 47px
      &__title {
        text-align center
      }
      &__item {
        display flex
        min-height 145px
        align-items center
        border-bottom  3px solid #799c95
        &_clear-bottom {
          border-bottom none
        }
      }
      &__img {
        flex 0 0 145px
        text-align center
      }
      &__text {
        line-height 1.6
        margin-right 35px
        margin-top 50px
        margin-bottom 50px
        &_left {
          margin-left 10px
          margin-right 0px
        }
      }
    }

    .content-button {
        text-decoration none
        font-size 18px
        text-transform uppercase
        width 357px
        height 70px
        margin 0 auto
        text-align center
        line-height 70px
        margin-top 0px
        &_first {
          margin-bottom 67px
          margin-top 35px
        }
        &__link {
          color #ffffff
          text-decoration none
          display block
          background-color $color-button-link
          &:hover {
              background-color $color-header-link-hover
            }
          &_advantages {
            background-color $color-advantages
            &:hover {
              background-color $color-advantages-link
            }
          }
          &_resources {
            background-color $color-resources
            &:hover {
              background-color $color-resources-link
            }
          }
          &_offers {
            background-color $color-offers
            &:hover {
              background-color $color-offers-link
            }
          }
          &_work {
            background-color $color-work
            &:hover {
              background-color $color-work-link
            }
          }
        }
    }

.wrapper-bg {
  width 100%
  &_advantages {
    background-color $color-advantages
  }
  &_resources {
    background-color $color-resources
  }
  &_offers {
    background-color $color-offers
  }
  &_work {
    background-color $color-work
  }


}
  // Отзывы
.reviews {
&__wrapper {
  display flex
  justify-content space-between
  @media (max-width: 950px) {
    flex-direction column
    align-items center
  }
}
  &__link {
    text-decoration none
  }
  &__title {
    overflow: hidden;
    font-family 'Open Sans Regular', 'Arial', sans-serif
    font-size 24px
    text-align center
    text-transform uppercase
    margin-top 63px
    margin-bottom 40px
    span {
      display inline-block
      vertical-align middle
    }
    &:before,&:after {
      content ""
      display inline-block
      vertical-align middle
      width 100%
      height 7px
      background-color $color-work
      position relative
    }
    &:before {
      margin-left -100%
      left -12px
    }
    &:after {
      margin-right -100%
      right -12px
    }
  }
  &__item {
    max-width 308px
  }
  &__img {
    position relative
    &:before {
      content ""
      position absolute
      height 92px
      width 92px
      left 50%
      margin-left -46px
      top 50%
      margin-top -46px
      background-image url("../img/content/reviews/button-img.png")
    }
  }
  &__text {
    font-family 'Open Sans Italic', 'Arial', sans-serif
    font-size 16px
    text-align center
    color $color-work
    margin-top 24px

  }
  &__all-wrapper {
    text-align center
  }
  &__all{
    display inline-block
    font-family 'Open Sans Regular', 'Arial', sans-serif
    font-size 18px
    text-transform uppercase
    color #000000
    margin-top 36px
    margin-bottom 62px
  }
}
  //----footer---------
  .footer {
    margin-top 72px
  &__wrapper {
    display flex
    align-items center
    height 161px
  }
    &__img {
      flex 0 0 226px
      text-align center
    }
    &__text {
          font-family 'Open Sans Regular', 'Arial', sans-serif
          font-size 18px
          line-height 3.2
          color #ffffff
          @media (max-width: 900px) {
          line-height 2.5
        }
          @media (max-width: 600px) {
          line-height 1.5
        }
          @media (max-width: 500px) {
          line-height 1
      }
          @media (max-width: 430px) {
            font-size 16px
      }
    }
    &__the-best {
      margin-top 40px
      margin-bottom 10px
      font-family 'Open Sans Regular', 'Arial', sans-serif
      font-size 24px
      text-align center
      text-transform uppercase

    }
  }