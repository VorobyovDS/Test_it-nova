// цвета
  $color-button-link = #91b642;
  $color-header-link-hover = #6db63d;
  $color-resources = #79899c
  $color-resources-link = #8c989c
  $color-advantages = #799c95
  $color-advantages-link = #749c85
  $color-offers = #754960
  $color-offers-link = #75383b
  $color-work = #477c71
  $color-work-link = #507c5e
  $width-content = 977px;

body {

